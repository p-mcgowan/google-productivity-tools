{
  "manifest_version" : 2,
  "name"             : "Googler",
  "version"          : "1.0",
  "description"      : "Efficientize your Googling",
  "icons": {
    "16": "icon.png"
  },

  "browser_action": {
    "default_icon"  : "icon.png",
    "default_popup" : "popup.html"
  },

  "background": {
    "scripts"    : ["background.js"],
    "persistent" : false
  },

  "omnibox": {
    "keyword" : "k"
  },

  "permissions": [
    "https://ajax.googleapis.com/",
    "activeTab",
    "bookmarks",
    "history",
    "tabs"
  ]
}
