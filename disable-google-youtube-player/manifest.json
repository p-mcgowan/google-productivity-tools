{
  "manifest_version": 2,
  "name": "Google and youtube tweaks",
  "version": "1.0",
  "description": "Disable youtube mini player, hide ai summaries, improve youtube ui",
  "content_scripts": [
    {
      "matches": [
        "https://google.com/*/*",
        "https://*.google.com/*",
        "https://*.google.ca/*",
        "https://*.google.de/*"
      ],
      "js": ["js/disable-mini-player.js"],
      "css": ["css/hide-ai.css"]
    },
    {
      "matches": [
        "https://youtube.com/*/*",
        "https://www.youtube.com/*/*",
        "https://*.youtube.com/*"
      ],
      "css": ["css/make-youtube-suck-less.css", "css/hide-ai.css"]
    }
  ]
}
